
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

   
</head>

<body>
    <style>
        body {
            background-color: #f2f2f2;
        }

        .container {
            text-align: justify-all;
            margin-top: 30px;
        }

        .form-group {
            background: #fff;
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 15px 5px #888888;
        }

        .form-label {
            font-weight: bold;
        }

        .bold-label {
            font-weight: bold;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            color: #fff;
            cursor: pointer;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        select.form-control,
        input.form-control {
            background: #f0f0f0;
            border: none;
            border-radius: 5px;
            padding: 10px;
            width: 100%;
        }
    </style>
    <div class="container mt-5">
        <h1 style="font-family: 'Arial', sans-serif; text-align: center;">Final Year Project Management System</h1>
    </div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <form id="account_form">
                            <div class="container">
                                <div class="col-md-12 mb-2">
                                    <a Class="btn-sm btn-warning" href="/Home/Register">
                                        Do not have an account? No Problem, Click here to register!
                                    </a>
                                </div>
                                <div class="col-md-12">
                                    <div class="well">
                                        <h4>Login here.</h4>
                                        <div id="alert"></div>
                                        <label>Username</label>
                                        <input type="text" ID="login_user_name" Class="form-control">
                                        <label>Password</label>
                                        <input type="password" ID="login_password" Class="form-control" TextMode="Password">
                                        <br />
                                        <input type="button" ID="btn_login" Text="LOGIN" Class="btn btn-warning btn-block" value="Login">

                                        <Label ID="status"></Label>

                                    </div>
                                </div>


                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <script>
            $("#btn_login").click(function () {
                var username = $("#login_user_name").val();
                var password = $("#login_password").val();

                if (!username) {
                    alert("Please Enter Username")
                    return;
                }

                if (!password) {
                    alert("Please Enter Password")
                    return;
                }

                $.ajax({
                    url: '/Home/Login',
                    method: 'post',
                    traditional: true,
                    data: { 'userName': username, 'password': password },
                    success: Loginsuccess
                });

            });

            function Loginsuccess(response) {

                if (response == 1) {
                    window.location.href = "/Users/UsersDetail";
                }
                if (response == 2) {
                    window.location.href = "/Project/ListAllProjects";
                }
                if (response == 3) {
                    window.location.href = "/Project/ListAllStudentProjects";
                }
                if (response == -1) {
                    alert("Invalid credentials !!! ");
                }
            }

        </script>

</body>
</html>