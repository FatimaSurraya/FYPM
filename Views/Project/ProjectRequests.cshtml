@{
    ViewBag.Title = "Project Requests Approval";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<FYPM.Models.StudentProjectRequest>

<div class="card p-3 mt-3">
    <div class="card-title d-flex flex-wrap justify-content-between align-items-center mb-0">
        <h3 class="card-label">
            Project Requests Approval
        </h3>

    </div>
    <div class="card-body">
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content">
                            <div class="wrapper wrapper-content table-responsive">
                                <table class="table cstm_table table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th>RequestId</th>
                                            <th>ProjectId</th>
                                            <th>UserId</th>
                                            <th>RequestTime</th>
                                            <th>IsApproved</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var request in Model)
                                        {
                                            <tr>
                                                <td>@request.RequestId</td>
                                                <td>@request.ProjectId</td>
                                                <td>@request.UserId</td>
                                                <td>@request.RequestTime</td>
                                                <td>
                                                    @if (request.IsApproved.HasValue && request.IsApproved.Value)
                                                    {
                                                        <span class="badge badge-success">@request.IsApproved</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-danger">@request.IsApproved</span>
                                                    }

                                                </td>
                                                <td> <button type="button" class="btn btn-primary" onclick="approveProjectRequest()">Approve Request</button></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<!-- Include Select2 CSS -->
<link href="~/Content/css/plugins/select2/select2.min.css" rel="stylesheet" />

<!-- Include Select2 JS -->
<script src="~/Content/js/plugins/select2/select2.full.min.js"></script>

<script>
    function approveProjectRequest() {
        var requestId = document.getElementById("Request").value;
        var projectId = document.getElementById("Project").value;
        var userId = document.getElementById("User").value;
        var requestTime = document.getElementById("RequestTime").value;
        var isApproved = document.getElementById("IsApproved").value; // Assuming 1 for approved, 0 for not approved

        // Validate required fields
        if (!requestId || !projectId || !userId || !requestTime || !isApproved) {
            alert("Please fill in all required fields.");
            return;
        }

        // Validate IsApproved value (ensure it's 1 or 0)
        if (isApproved !== "1" && isApproved !== "0") {
            alert("Please enter a valid IsApproved value (1 for approved, 0 for not approved).");
            return;
        }

        var formData = new FormData();
        formData.append('RequestId', requestId);
        formData.append('ProjectId', projectId);
        formData.append('UserId', userId);
        formData.append('RequestTime', requestTime);
        formData.append('IsApproved', isApproved);

        $.ajax({
            url: '/Project/ProjectRequests', // Assuming this is the correct endpoint for approval
            method: 'post',
            data: formData,
            processData: false,
            contentType: false,
            success: function (obj) {
                if (obj == 1) { // Assuming 1 indicates successful approval
                    alert("Project Request Approved Successfully");
                    window.location.href = '/Project/ProjectRequests'; // Redirect to a list of requests
                } else {
                    alert("There was an error approving the request. Please try again.");
                }
            }
        });
    }
</script>